{
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "target": "es2020",
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "vitest.config.ts",
    "vitest.config.unit.ts",
    "vitest.setup.ts",
    "fimidx.sqlite.drizzle.config.ts",
    "fimidx.postgres.drizzle.config.ts",
    "dist"
  ]
}
